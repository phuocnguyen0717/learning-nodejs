extends layouts/main-layouts.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")
block content 
    main 
        if prods.length > 0                 
            .grid 
                each product in prods  
                    article.card.product-item   
                        header.card.header 
                            h1.product__title #{product.title}
                        div.card__image    
                            img(src="https://ychef.files.bbci.co.uk/976x549/p03gg1lc.jpg", alt="")
                        div.card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more
                        div.card__actions
                            button.btn Add to Cart
        else 
            h1 No Products    
